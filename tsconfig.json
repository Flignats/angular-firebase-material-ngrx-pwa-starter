{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@app/*": [
                "app/*"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@env/*": [
                "environments/*"
            ],
            "@shared-data/*": [
                "../shared-data/*"
            ],
            "@testing/*": [
                "testing/*"
            ],
            "@user/*": [
                "app/modules/user/*"
            ]
        },
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}